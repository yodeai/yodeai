{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      //"*": ["*", "types/*"],
      "@components/*": ["app/_components/*"],
      "@api/*": ["app/api/*"],
      "@types/*": ["app/_types/*"],
      "@lib/*": ["app/_lib/*"],
      "@utils/*": ["app/_utils/*"],
      "@contexts/*": ["app/_contexts/*"],
      "@hooks/*": ["_hooks/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "middleware.js", "app/_components/QuestionAnswerForm.jsx", "app/_app.js"],
  "exclude": ["node_modules"]
}
